@model IEnumerable<parking_manager.DTO.ParkingSessionsDTO>

<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/home.css" />
</head>

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Veículos no Estacionamento</h2>
        <div class="d-flex align-items-center">
            <div class="input-group"">
                <span class=" input-group-text">
                <i class="bi bi-car-front-fill"></i>
                </span>
                <input type="text" class="form-control" id="input-plate" placeholder="Placa do Veículo"
                    aria-label="Placa do Veículo">
                <button type="submit" class="btn btn-benner-red" id="addButton">
                    Adicionar
                </button>
                <button type="submit" class="btn btn-benner-blue" id="finalizeButton">
                    Finalizar
                </button>
            </div>
        </div>
    </div>

    <div class="table">
        <table class="table table-striped table-hover table-bordered">
            <thead class="table-benner-header">
                <tr>
                    <th>Placa</th>
                    <th>Entrada</th>
                    <th>Saída</th>
                    <th>Duração</th>
                    <th>Tempo Cobrado (horas)</th>
                    <th>Preço/Hora (R$)</th>
                    <th>Preço Total (R$)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var session in Model)
                {
                    <tr>
                        <td>@session.VehiclePlate</td>
                        <td>@session.EntryDate</td>
                        <td>@session.ExitDate</td>
                        <td>@session.Duration</td>
                        <td>@session.HoursPaid</td>
                        <td>@session.PricePerHour</td>
                        <td>@session.TotalPrice</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>

<script src="/js/home.js"></script>
